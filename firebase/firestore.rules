rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner() {
      return signedIn() && resource.data.ownerUid == request.auth.uid;
    }

    function isAdmin() {
      return signedIn() && (request.auth.token.role in ['owner', 'admin']);
    }

    match /users/{uid} {
      allow read, write: if signedIn() && (uid == request.auth.uid || isAdmin());
    }

    match /estimates/{id} {
      allow create: if signedIn();
      allow read, update, delete: if signedIn() && (isOwner() || isAdmin());
    }

    match /config/{docId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /resources/{resourceId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }
  }
}
